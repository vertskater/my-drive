<% if(locals.path ) { %>
    <div class="folder-pagination">
        <a href="/drive"><svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" fill="#5f6368"><path d="M240-200h120v-240h240v240h120v-360L480-740 240-560v360Zm-80 80v-480l320-240 320 240v480H520v-240h-80v240H160Zm320-350Z"/></svg></a>
    <% path.forEach((path) => { %>
        <span><a href="/drive/<%=path.uuid%>"><%=path.name%></a>/</span>
    <% }) %>
    </div>
<% } %>
<section class="dir-list-container">
    <ul>
        <%if(locals.folders) { %>
            <% folders.forEach( (folder) => { %>
                <li class="single-dir">
                    <a class="folder-link" href="/drive/<%= folder.uuid %>">
                    <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" fill="#5f6368"><path d="M160-160q-33 0-56.5-23.5T80-240v-480q0-33 23.5-56.5T160-800h240l80 80h320q33 0 56.5 23.5T880-640v400q0 33-23.5 56.5T800-160H160Zm0-80h640v-400H447l-80-80H160v480Zm0 0v-480 480Z"/></svg>
                    <%= folder.name %>
                    </a>
                    <div class="edit-del-dir">
                        <a class="edit-link" href="/drive/<%=folder.uuid%>/edit">
                            <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" fill="#5f6368"><path d="M200-200h57l391-391-57-57-391 391v57Zm-80 80v-170l528-527q12-11 26.5-17t30.5-6q16 0 31 6t26 18l55 56q12 11 17.5 26t5.5 30q0 16-5.5 30.5T817-647L290-120H120Zm640-584-56-56 56 56Zm-141 85-28-29 57 57-29-28Z"/></svg>
                        </a>
                    </div>
                    <div class="edit-del-dir">
                        <a class="del-link" href="/drive/<%=folder.uuid%>/delete">
                            <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" fill="#5f6368"><path d="M280-120q-33 0-56.5-23.5T200-200v-520h-40v-80h200v-40h240v40h200v80h-40v520q0 33-23.5 56.5T680-120H280Zm400-600H280v520h400v-520ZM360-280h80v-360h-80v360Zm160 0h80v-360h-80v360ZM280-720v520-520Z"/></svg>
                        </a>
                    </div>
                </li>
            <% }) %>
        <%}else { %>
            <li>Folder is empty</li>
        <% } %>
    </ul>

</section>